generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Projeto {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String
  tecnologias Technology[]
  imagemUrl   String
  linkProjeto String
  linkCodigo  String
}

enum Technology {
  css
  elixir
  figma
  html
  java
  js
  kotlin
  mongo
  next
  node
  oracle
  php
  postgresql
  prisma
  python
  react
  sass
  spring
  sql
  tailwind
  ts
}
